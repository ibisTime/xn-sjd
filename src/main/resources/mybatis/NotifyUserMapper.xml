<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.INotifyUserDAO">

	<resultMap id="notifyUser_DB_Result" type="notifyUser">
		<result column="code" property="code" />
		<result column="type" property="type" />
		<result column="name" property="name" />
		<result column="mobile" property="mobile" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="type != null and type != '' ">
				AND t.type = #{type}
			</if>
			<if test="name != null and name != '' ">
				AND t.name = #{name}
			</if>
			<if test="mobile != null and mobile != '' ">
				AND t.mobile = #{mobile}
			</if>
		</trim>
	</sql>
	
	<select id="select_notifyUser" parameterType="notifyUser" resultMap="notifyUser_DB_Result">
		SELECT
		t.code
		,t.type
		,t.name
		,t.mobile
		,t.updater
		,t.update_datetime
		,t.remark
		FROM
		tsys_notify_user t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_notifyUser_count" parameterType="notifyUser"
		resultType="java.lang.Long">
		SELECT count(1) FROM tsys_notify_user t
		<include refid="where_condition" />
	</select>

	<insert id="insert_notifyUser" parameterType="notifyUser">
		INSERT INTO
		tsys_notify_user(
		code
		,type
		,name
		,mobile
		,updater
		,update_datetime
		,remark
		)
		VALUES(
		#{code}
		,#{type}
		,#{name}
		,#{mobile}
		,#{updater}
		,#{updateDatetime}
		,#{remark}
		)
	</insert>

	<update id="update_notifyUser" parameterType="notifyUser">
		UPDATE tsys_notify_user
		SET
		name = #{name}
		,mobile = #{mobile}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>

	<delete id="delete_notifyUser" parameterType="notifyUser" >
		DELETE FROM tsys_notify_user WHERE code = #{code}
	</delete>

</mapper>