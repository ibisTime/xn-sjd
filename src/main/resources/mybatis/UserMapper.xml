		WHERE
		user_id = #{userId}		
	</update>
	
	<update id="update_location" parameterType="user">
		UPDATE tstd_user
		SET
		address = #{address}
		,area = #{area}
		,city=#{city}
		,province=#{province}
		,latitude=#{latitude}
		,longitude=#{longitude}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE
		user_id = #{userId}		
	</update>
	
	<update id="update_userReferee" parameterType="user">
		UPDATE tstd_user
		SET
		user_referee = #{userReferee}
		WHERE
		user_id = #{userId}		
	</update>
	
	<update id="approve_user" parameterType="user">
		UPDATE tstd_user
		SET
		,status = #{status}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE
		user_id = #{userId}		
	</update>
	
</mapper>
