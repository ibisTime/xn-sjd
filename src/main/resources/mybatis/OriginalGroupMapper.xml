<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.IOriginalGroupDAO">
	<resultMap id="originalGroup_DB_Result" type="originalGroup">
		<result column="code" property="code" />
		<result column="order_code" property="orderCode" />
		<result column="product_code" property="productCode" />
		<result column="product_name" property="productName" />
		<result column="owner_id" property="ownerId" />
		
		<result column="price" property="price" />
		<result column="quantity" property="quantity" />
		<result column="presell_quantity" property="presellQuantity" />
		<result column="unit" property="unit" />
		<result column="status" property="status" />
		
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="orderCode != null and orderCode != '' ">
				AND t.order_code = #{orderCode}
			</if>
			<if test="productCode != null and productCode != '' ">
				AND t.product_code = #{productCode}
			</if>
			<if test="ownerId != null and ownerId != '' ">
				AND t.owner_id = #{ownerId}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
		</trim>
	</sql>
	
	<select id="select_originalGroup" parameterType="originalGroup" resultMap="originalGroup_DB_Result">
		SELECT
		t.code
		,t.order_code
		,t.product_code
		,t.product_name
		,t.owner_id
		
		,t.price
		,t.quantity
		,t.presell_quantity
		,t.unit
		,t.status
		
		,t.updater
		,t.update_datetime
		,t.remark
		FROM
		tys_original_group t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_originalGroup_count" parameterType="originalGroup"
		resultType="java.lang.Long">
		SELECT count(1) FROM tys_original_group t
		<include refid="where_condition" />
	</select>

	<insert id="insert_originalGroup" parameterType="originalGroup">
		INSERT INTO
		tys_original_group(
		code
		,order_code
		,product_code
		,product_name
		,owner_id
		
		,price
		,quantity
		,unit
		,status
		,updater
		
		,update_datetime
		,remark
		)
		VALUES(
		#{code}
		,#{orderCode}
		,#{productCode}
		,#{productName}
		,#{ownerId}
		
		,#{price}
		,#{quantity}
		,#{unit}
		,#{status}
		,#{updater}
		
		,#{updateDatetime}
		,#{remark}
		)
	</insert>

	<update id="update_adoptOriginalGroup" parameterType="originalGroup">
		UPDATE tys_original_group
		SET
		status = #{status}
		,update_datetime = #{updateDatetime}
		WHERE code = #{code}
	</update>
	
	<update id="update_quantity" parameterType="originalGroup">
		UPDATE tys_original_group
		SET
		quantity = #{quantity}
		WHERE code = #{code}
	</update>
	
	<update id="update_deliver" parameterType="originalGroup">
		UPDATE tys_original_group
		SET
		status = #{status}
		,update_datetime = #{updateDatetime}
		WHERE code = #{code}
	</update>
	
	<update id="update_receive" parameterType="originalGroup">
		UPDATE tys_original_group
		SET
		status = #{status}
		,update_datetime = #{updateDatetime}
		WHERE code = #{code}
	</update>

</mapper>